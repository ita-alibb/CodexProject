<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" prefHeight="400.0" prefWidth="488.0" styleClass="background" stylesheets="@../css/menu-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am52.view.gui.guiControllers.MenuViewController">
   <children>
      <ListView fx:id="guiLobbies" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0" />
      <Button fx:id="newLobby" alignment="CENTER" mnemonicParsing="false" onAction="#createLobby" text="New Lobby">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Button>
      <Button fx:id="joinLobbyButton" mnemonicParsing="false" onAction="#joinLobby" text="Join Lobby" visible="false" />
      <Button fx:id="updateLobbyButton" mnemonicParsing="false" onAction="#updateLobby" text="Update lobby" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</StackPane>
